require 'rake/testtask'

Rake::TestTask.new do |test|
  test.libs.push 'test'
  test.pattern = 'tests//**/*tests.rb'
  test.warning = true
  test.verbose = true
end

task :default => :test

desc 'Generate a coverage report'
task :coverage do
  ENV['COVERAGE'] = 'true'
  Rake::Task['test'].execute
end
